@model IEnumerable<sonOfCod.Models.MailingList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<h2>Son of Cod Marketing Team Login</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <h4>Hello @User.Identity.Name!</h4>
    <h5>Mailing List</h5>
    <hr />
    @foreach (var contact in Model)
    {
        <div class="row">
            <div class="col s12 m5">
                <div class="card-panel teal">
                    <span class="white-text">
                        <p>@contact.CustomerFirstName @contact.CustomerLastName</p>
                        <p>@contact.CustomerEmail</p>
                    </span>
                </div>
            </div>
        </div>

    }
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}