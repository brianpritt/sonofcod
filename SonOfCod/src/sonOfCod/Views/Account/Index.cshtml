@model IEnumerable<sonOfCod.Models.MailingList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<h2>Son of Cod Marketing Team Login</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <div class="index-middle">
        <h4>Hello @User.Identity.Name!</h4>
        <p>@Html.ActionLink("Add administrator", "Register")</p>

        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default" value="Log out" />
        }
    </div>
    <hr>
    <h5>Mailing List</h5>
    <hr />
    @foreach (var contact in Model)
    {
        <div class="row">
            <div class="col s12 m5">
                <div class="card-panel white">
                    <span class="black-text">
                        <p>@contact.CustomerFirstName @contact.CustomerLastName : @contact.CustomerEmail</p>
                            
                    </span>
                </div>
            </div>
        </div>

    }

}
else
{
    <div class="row">
        <div class="col s12 m12">
            <div class="card-panel grey">
                <span class="black-text">
                    <p>@Html.ActionLink("Log in", "Login")</p>
                    <p>@Html.ActionLink("Register","Register")</p>
                </span>
            </div>
        </div>
    </div>
    
}